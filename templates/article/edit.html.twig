{% extends 'base.html.twig' %}

{% block title %}Modification
{% endblock %}

{% block body %}
	<div class="container">
		{% if article is null %}
			<h2>Cet article n'existe pas</h2>
		{% else %}
			<h1 class="h3 mb-3 font-weight-normal">Modification de l'article</h1>

			{{ form_start(form) }}
			<div class="form-group mb-3">
				{{ form_row(form.titre) }}
			</div>
			<div class="form-group mb-3">
				{{ form_row(form.description) }}
			</div>
			<div class="form-group mb-3">
				{{ form_row(form.contenu) }}
			</div>
			<a href="/article/{{ article.id }}" class="btn btn-secondary mt-2">Annuler</button>
		</a>
		<button type="submit" class="btn btn-primary mt-2">Modifier</button>
		{{ form_end(form) }}
	{% endif %}
</div>{% endblock %}
