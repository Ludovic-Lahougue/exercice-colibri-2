{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<h1>Articles</h1>
		{% if articles is null %}
			<h2>Aucun article disponible</h2>
		{% else %}
			<div class="row row-cols-1 row-cols-md-3 g-4">
				{% for article in articles %}
					<div class="col">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">{{ article.titre }}</h5>
								<p class="card-text">{{ article.description }}</p>
								<a href="/article/{{ article.id }}" class="btn btn-primary">DÃ©tails</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
{% endblock %}
